{
    "fp16": {
        "enabled": true,
        "loss_scale": 0,
        "loss_scale_window": 1000,
        "hysteresis": 2,
        "min_loss_scale": 1
    },
    "zero_optimization": {
        "stage": 2,
        "offload_optimizer": {
            "device": "cpu",
            "pin_memory": true
        },
        "allgather_partitions": true,
        "allgather_bucket_size": 5e8,
        "overlap_comm": true,
        "reduce_scatter": true,
        "reduce_bucket_size": 5e8,
        "contiguous_gradients": true
    },
    "train_batch_size": "auto",
    "zero_allow_untested_optimizer": true,
    "steps_per_print": 2000,
    "optimizer": {
        "type": "AdamW",
        "params": {
          "lr": 1e-4,
          "betas": "auto",
          "eps": "auto",
          "weight_decay": "auto"
        }
    }
}